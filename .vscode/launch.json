  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Dev",
      "type": "node",
      "program": "${workspaceFolder}/dev.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    },

    {
      "request": "launch",
      "name": "Run Open File",
      "type": "node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}
